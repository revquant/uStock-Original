{
  "manifest_version": 1,
  "name": "uStock",
  "description": "A self improvement extension that rewards your stock when you visit learning and healthy websites and vice verca when you visit a game/content website",
  "version": "1",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "webNavigation",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
